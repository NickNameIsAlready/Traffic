<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="traffic.traffic1.activity.NetSettingActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="142dp"
        tools:layout_editor_absoluteX="102dp"
        android:orientation="vertical"
        android:background="#000">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:background="#000">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D7D7D7"
                android:layout_margin="2dp"
                android:text="   网络设置"
                android:gravity="left|center_vertical"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="1dp">
            <TextView
                android:id="@+id/ip_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务器地址："
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"/>
            <EditText
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ip_txt"
                android:singleLine="true"
                android:layout_marginRight="4dp"/>
            <TextView
                android:id="@+id/d_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="端口号："
                android:layout_marginTop="16dp"
                android:layout_marginLeft="36dp"
                android:layout_below="@+id/ip_txt"/>
            <EditText
                android:id="@+id/d_edt"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:singleLine="true"
                android:layout_toRightOf="@+id/d_txt"
                android:layout_alignTop="@+id/d_txt"
                android:layout_marginRight="4dp"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
