<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="traffic.traffic1.activity.Topic18Activity">
    <TextView
        android:id="@+id/txt_18_road_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一号道路:"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt_18_road_state_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_18_road_title_1"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/txt_18_road_title_1"
        android:text="通畅"/>
    <TextView
        android:id="@+id/txt_18_car_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一号小车:"
        android:layout_below="@+id/txt_18_road_title_1"
        android:layout_alignLeft="@+id/txt_18_road_title_1"
        android:layout_marginTop="8dp"/>
    <Switch
        android:id="@+id/sw_18_car_state_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/car_state_18"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/txt_18_car_title_1"
        android:layout_alignTop="@+id/txt_18_car_title_1"/>
    <TextView
        android:id="@+id/txt_18_road_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二号道路:"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/txt_18_car_title_1"
        android:layout_alignLeft="@+id/txt_18_car_title_1"/>
    <TextView
        android:id="@+id/txt_18_road_state_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_18_road_title_2"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/txt_18_road_title_2"
        android:text="通畅"/>
    <TextView
        android:id="@+id/txt_18_car_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="二号小车:"
        android:layout_below="@+id/txt_18_road_title_2"
        android:layout_alignLeft="@+id/txt_18_road_title_2"
        android:layout_marginTop="8dp"/>
    <Switch
        android:id="@+id/sw_18_car_state_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/car_state_18"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/txt_18_car_title_2"
        android:layout_alignTop="@+id/txt_18_car_title_2"/>
    <TextView
        android:id="@+id/txt_18_road_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三号道路:"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/txt_18_car_title_2"
        android:layout_alignLeft="@+id/txt_18_car_title_2"/>
    <TextView
        android:id="@+id/txt_18_road_state_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_18_road_title_3"
        android:layout_marginLeft="16dp"
        android:layout_alignTop="@+id/txt_18_road_title_3"
        android:text="通畅"/>
    <TextView
        android:id="@+id/txt_18_car_title_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三号小车:"
        android:layout_below="@+id/txt_18_road_title_3"
        android:layout_alignLeft="@+id/txt_18_road_title_3"
        android:layout_marginTop="8dp"/>
    <Switch
        android:id="@+id/sw_18_car_state_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/car_state_18"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/txt_18_car_title_3"
        android:layout_alignTop="@+id/txt_18_car_title_3"/>
</RelativeLayout>
